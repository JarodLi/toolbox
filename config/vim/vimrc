let mapleader = ";"

call plug#begin('~/.vim/bundle')
  "Plug('jlanzarotta/bufexplorer')
  for f in glob('~/.vim/rc/*.vim', 0, 1)
    execute ':source ' f
  endfor
call plug#end()

"defx窗口大小配置必须在plug加载 完成后执行
call defx#custom#option('_', {
      \ 'winwidth': 30,
      \ 'split': 'vertical',
      \ 'direction': 'botright',
      \ 'show_ignored_files': 0,
      \ 'buffer_name': '',
      \ 'toggle': 1,
      \ 'resume': 1
      \ })



